<div class="container-adocao">
   <div class="row">
   <% gatos.forEach((gato) => { %>

      <div class="col s4">
         <div class="card">
            <div class="card-image">
               <img class="imageClass" src="data:image/png;base64, <%= gato.image %>">
               <span class="card-title"><%= gato.nome %></span>
               <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons" onclick="likeCat('<%= gato.id %>', '<%= gato.email %>', '<%= gato.nome %>')">thumb_up</i></a>
            </div>
            <div class="card-content">
               <p style="font-weight:bold;"><%= gato.raca %> </p>
               <p><span  style="font-weight:bold;">Idade: </span> <%= gato.idade %></p>
               <p style="margin-top:10px"><%= gato.desc %></p>
            </div>
         </div>
      </div>

      <% })%>
      
   </div>
</div>